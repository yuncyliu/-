.box{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.box image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 100%;
}


/*授权按钮*/
.getUserInfo{
  font-size: 30rpx;
  padding: 0;
  margin: 0;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
}
/*背景透明时 出现黑色边框 去除边框*/
button[plain] {
  border: none;
  border-color: transparent;
}
