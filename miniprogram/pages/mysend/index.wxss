/* pages/team/team.wxss */
page {
  background-color: #8034c809; 
}
.send-box {
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(19, 41, 168);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 90%;
  left: 85%;
  border-radius: 100%;
  color: white;
}

.box{
  width: 710rpx;
  margin: 20rpx;
  border-radius: 15rpx;
  background-color: white;
  padding: 15rpx 20rpx;
  box-shadow: 5rpx 5rpx rgba(173, 165, 173, 0.671);
}
.top{
  width: 90%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  /* justify-content: center; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: auto;
}
.middle{
  width: 95%;
  background-color: rgb(242, 235, 243);
  border-radius: 15rpx;
  padding: 15rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 26rpx;
  justify-content: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: auto;
}
.middle view{
  margin: 10rpx 0;
}
.btm{
  width: 99%;
  height: 60rpx;
  margin: 15rpx 0 0 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  justify-content: space-between;
}
.btm .rigth{
  width: 340rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}