/* pages/team/team.wxss */
page {
  background-color: #8034c809;
}

.send-box {
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(19, 41, 168);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 90%;
  left: 85%;
  border-radius: 100%;
  color: rgb(242, 235, 243);
}

.imgclass {
  width: 134rpx;
  height: 139rpx;
  display: inline-block;
  box-sizing: border-box;
  left: 0rpx;
  top: 0rpx;
}

.box {
  width: 710rpx;
  margin: 20rpx;
  border-radius: 15rpx;
  background-color: rgb(255, 255, 255);
  padding: 15rpx 20rpx;
  box-shadow: 5rpx 5rpx 0rpx 5rpx rgba(173, 165, 173, 0.671);
}

.top {
  width: 90%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
}

.middle {
  width: 95%;
  background-color: rgb(239, 234, 241);
  border-radius: 15rpx;
  padding: 15rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.middle view {
  margin: 10rpx 0;
}

.btm {
  width: 99%;
  height: 60rpx;
  margin: 15rpx 0 0 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  justify-content: space-between;
}

.btm .rigth {
  width: 340rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.container {
  position: relative;
}

.float-button {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 150rpx;
  height: 100rpx;

}

.float-icon {
  width: 200rpx;
  height: 150rpx;
}

.type-container {
  margin-left: 0rpx;
  height: 40rpx;
  width: fit-content;
  background-color: #e4e68663;
  padding: 15rpx 5rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.type-text {
  font-size: 25rpx;
  font-weight: 20rpx;
  color: rgba(192, 129, 12, 0.911);
  text-align: center;
  writing-mode: horizontal-tbs;
}

.fatherstyle {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: auto;
}