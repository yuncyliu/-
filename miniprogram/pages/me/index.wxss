/* 顶部个人界面样式 */
/* pages/list/list.wxss */
page {
    background: #8034c809;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
    width: 100%;
  }
  .top{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    position: relative;
  }
  .top > .bg{
    width: 100%;
    position: absolute;
    height: 550rpx;
    top: 0;
    left: 0;
    z-index: 0;
    background-color: #8034c809;
  }
  .header{
    height:300rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
    position: relative;
    background-color: rgb(216, 204, 224);
    border-radius: 20rpx;
    margin-top: 50rpx;
    position: relative;
  }
  .header .bg{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #fff;
  }
  .header .avatar{
    width: 300rpx;
    height: 160rpx;
    border-radius: 50%;
    margin-bottom: 10rpx;
    margin-top: -75rpx;
    background-color: #ffffff;
  }
  .header .nickName{
    font-size: 46rpx;
    font-weight: bold;
  }
  .header .code{
    font-size: 28rpx;
    margin-top: 10rpx;
    padding-bottom: 10rpx;
  }
  .header .code .copy_id{
    margin-left: 10rpx;
  }
  .header .arrow{
    width: 35rpx;
    height: 35rpx;
    padding: 25rpx;
    position:absolute;
    right: 20rpx;
    top: 50%;
  }
  
  .main{
    display: flex;
    flex-direction: column;
    width: 90%;
    border-radius: 15rpx;
    margin-top: 30rpx;
    background-color: #ffffff;
  }
  .main .item{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0;
    text-align: left;
    height: 110rpx;
    border-bottom: 2rpx solid #f3f3f3;
    background-color: #ffffff;
  }
  .main .item .icon{
    width: 35rpx;
    height: 35rpx;
    padding: 0 15rpx 0 15rpx;
  }
  .main .item .val{
    flex: 1;
    padding-left: 15rpx;
    color: #707070;
    font-weight: normal;
    font-size: 38rpx;
  }
  .main .item .txt{
    font-size: 24rpx;
    color: #707070;
  }
  .main .item .btn{
     padding: 0 15rpx 0 15rpx;
     color: #666666;
  }
