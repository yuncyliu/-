/* 用户剩余 */
.money-sheng {
  background-color: #fff;
  margin: -95rpx 30rpx 10rpx 30rpx;
  border-radius: 15rpx;
  padding: 35rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;

}

.money-sheng .left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.money-sheng .money {
  font-weight: bold;
  margin-top: 12rpx;
  font-size: 15pt;
  letter-spacing: 0.1em;

}

.money-sheng .right {
  background-color: #f3e2a4;
  height: 50rpx;
  line-height: 50rpx;
  padding: 15rpx 60rpx;
  border-radius: 40rpx;
  color: #976822;
  font-size: 12pt;
}

