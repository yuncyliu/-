<view class="cu-bar foot input {{InputBottom!=0?'cur':''}}" style="bottom:{{InputBottom}}px">
  <view class="action">
    <text bindtap="showModal" data-target="bottomModal" class="cuIcon-sort text-grey"></text>
  </view>

  <input class="solid-bottom" bindinput="getInputValue" value="{{inputValue}}" placeholder="请输入内容" focus="{{false}}" maxlength="300" cursor-spacing="10"></input>

  <button style="width: 200rpx; background-color: #8034c81e; color: rgb(157,143,162); font-size: 32rpx;" bindtap="publishComment" class="cu-btn bg-grey shadow">发送</button>
</view>

<view class="cu-modal {{modalName=='Modal'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">用户信息</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl">
      <view style="color: rgb(95, 95, 95);">
        <view style="margin-bottom: 10rpx;">
          角色：{{info.openid==openid?'群主':"普通成员"}}
        </view>
        <view style="margin-bottom: 10rpx;">
          用户昵称：{{info.name}}
        </view>
        <!-- <view style="margin-bottom: 10rpx;">
          openid{{info.openid}}
        </view> -->
      </view>
    </view>
  </view>
</view>



<view class="cu-modal bottom-modal {{modalName=='bottomModal'?'show':''}}">
  <view class="cu-dialog" style="height: 80%;background-color: white;">
    <view class="cu-bar bg-white">
      <view class="action text-purple" bindtap="hideModal">取消</view>
    </view>
    <van-divider contentPosition="center">群成员</van-divider>
    
    <view style="width: 710rpx;margin: 20rpx;display: flex;flex-direction: row;flex-wrap: wrap;">
      <view wx:for="{{member}}" wx:key="index" style="margin: 15rpx 20rpx;height: 150rpx;width: 140rpx;display: flex;flex-direction: column;align-items: center;justify-content: space-between;"
      bindlongpress="{{isManager==openid?'kick':''}}" data-openid="{{item.openid}}" data-name="{{item.name}}"> 
        <image style="width: 100rpx;height: 100rpx;border-radius:8px;" src="{{item.face}}" mode=""/>
        <view class="name">
          {{item.name}}
        </view>
      </view>
    </view>
    <text style="position:relative;top:300rpx;color: rgba(128, 128, 128, 0.733);">长按即可删除群成员</text>
  </view>
</view>