/* pages/list/list.wxss */
page {
  background: #f3f3f3;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  width: 100%;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  position: relative;
}
.container > .bg{
  width: 100%;
  position: absolute;
  height: 500rpx;
  top: 0;
  left: 0;
  z-index: 0;
  background-color: #76c49c;
}
.header{
  height:300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  position: relative;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 100rpx;
  position: relative;
}
.header .bg{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.header .avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  margin-top: -75rpx;
  background-color: #ffffff;
}
.header .nickName{
  font-size: 46rpx;
  font-weight: bold;
}
.header .code{
  font-size: 28rpx;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}
.header .code .copy_id{
  margin-left: 10rpx;
}
.header .arrow{
  width: 35rpx;
  height: 35rpx;
  padding: 25rpx;
  position:absolute;
  right: 20rpx;
  top: 50%;
}

.main{
  display: flex;
  flex-direction: column;
  width: 90%;
  border-radius: 15rpx;
  margin-top: 30rpx;
  background-color: #ffffff;
}
.main .item{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  text-align: left;
  height: 110rpx;
  border-bottom: 2rpx solid #f3f3f3;
  background-color: #ffffff;
}
.main .item .icon{
  width: 35rpx;
  height: 35rpx;
  padding: 0 15rpx 0 15rpx;
}
.main .item .val{
  flex: 1;
  padding-left: 15rpx;
  color: #707070;
  font-weight: normal;
  font-size: 32rpx;
}
.main .item .txt{
  font-size: 24rpx;
  color: #707070;
}
.main .item .btn{
   padding: 0 15rpx 0 15rpx;
   color: #666666;
}
